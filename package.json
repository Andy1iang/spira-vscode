{
    "name": "spira-artifact-viewer",
    "displayName": "Spira Artifact Viewer",
    "description": "Allows users to see their assigned artifacts within VS Code",
    "version": "0.0.1",
    "publisher": "Inflectra",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:spira.refresh",
        "onView:spiraArtifacts"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "spira.refresh",
                "title": "Spira - Refresh"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "spira-viewer",
                    "title": "Spira",
                    "icon": "media/spiraplan.svg"
                }
            ]
        },
        "views": {
            "spira-viewer": [
                {
                    "id": "spiraArtifacts",
                    "name": "Spira Artifacts"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "tslint": "^5.8.0",
        "typescript": "^2.9.1",
        "vscode": "^1.1.6"
    }
}
