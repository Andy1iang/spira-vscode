{
    "name": "spira-artifact-viewer",
    "displayName": "Spira Artifact Viewer",
    "description": "Allows users to see their assigned artifacts within VS Code",
    "version": "0.0.1",
    "publisher": "Inflectra",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:spira.refresh",
        "onView:spiraArtifacts"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "spira.refresh",
                "title": "Spira - Refresh"
            },
            {
                "command": "spira.info",
                "title": "Spira - Show Artifact Information"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "spira-viewer",
                    "title": "Spira",
                    "icon": "media/spiraplan.svg"
                }
            ]
        },
        "views": {
            "spira-viewer": [
                {
                    "id": "spiraArtifacts",
                    "name": "Spira Artifacts"
                },
                {
                    "id": "spiraInformation",
                    "name": "Artifact Information"
                }
            ]
        },
        "configuration": {
            "title": "Spira configuration",
            "properties": {
                "spira.credentials.url": {
                    "type": "string",
                    "default": "http://doctor/SpiraPlan",
                    "description": "Base URL for accessing Spira ex. https://demo.spiraservice.net/examle"
                },
                "spira.credentials.username": {
                    "type": "string",
                    "default": "fredbloggs",
                    "description": "Enter your Spira username"
                },
                "spira.credentials.rsstoken": {
                    "type": "string",
                    "default": "{XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX}",
                    "description": "Marked 'RSS Token' in your profile, RSS Feeds must be enabled for this to work"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "tslint": "^5.8.0",
        "typescript": "^2.9.1",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "request": "^2.87.0"
    }
}